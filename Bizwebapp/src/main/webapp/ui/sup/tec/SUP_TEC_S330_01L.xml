     */
	scwin.btn_summry_onclick = function(e) {
		var row = grd_list.getFocusedRowIndex();
		if(row < 0){
			alert("집계표를 출력할 결의번호를 선택하세요.");
			return;
		}
		
		if(dlt_grd.getCellData(row, "unslip_no").trim() == ""){
			alert ("미결의 상태 입니다. \n 결의 후 집계표를 출력해 주시기 바랍니다.");
			return;
		}
		
		var pOzrCode = "";
		if(dlt_grd.getCellData(row, "tax_cd") == "FTX001"){
			pOzrCode = (dlt_grd.getCellData(row, "demnd_recv_clsf") == "2")? "S005" : "S009";
		}else{
			pOzrCode = "S005";
		}
		
		var node="unslip_no=" + dlt_grd.getCellData(row, "unslip_no") + "&slip_flag=" + sbx_src_kind.getValue();
		com.oz.openPopup({
			ozrCode : pOzrCode,
			clsf : dlt_grd.getCellData(row, "tax_cd"),
			param : node
		});
	};
	
	/*
     * (청구)입금내역 버튼 클릭 이벤트
     */
	scwin.btn_depst_onclick = function(e) {
