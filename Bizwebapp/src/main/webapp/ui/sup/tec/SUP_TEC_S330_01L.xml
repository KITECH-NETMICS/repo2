         <script type="text/javascript" lazy="false"><![CDATA[
	/****************************************************
 	 * 화면 설명 : 기술지원입금의뢰
 	 * 변경 이력 : 2023-05-22	이영희	최초 작성
 	 * 서비스아이디 : S317
 	 ****************************************************/  
    /*
     * 페이지 열기
     */          
	scwin.onpageload = function() {
		// 초기화
		var today = com.getServerDateTime();
		ica_from.setValue(com.addDate(today, -60));
		ica_to.setValue(today);
		ica_slip_ymd.setValue(today);
		
		grd_list.setColumnVisible("rst_book_issu", false);
		grd_list.setColumnVisible("rst_book_attach", false);
		grp_help.hide();
				
		// 엔터키 이벤트
		com.setEnterKeyEvent(grp_accnt_no, scwin.btn_accnt_no_onclick);
		
		// 기간 체크
		com.checkPeriod(ica_from, ica_to);	
		
		// 데이터 유효성 체크
		com.setValidGroup(grp_search, [
			  {id:"from_ymd", mandatory :true}
			, {id:"to_ymd", mandatory :true}
			, {id:"rdo_prcs_state", mandatory :true}
		]);
		
		// 공통코드
		var codeOptions = [ { code : "STG", compID : "sbx_supt_work_clsf"}, // 시험료지원구분
							{ code : "RAK", compID : "grd_list:accnt_state"}, // 계정상태
							{ code : "XAD", compID : "grd_list:apr_state"}
		               ];		
		com.setCmnCd(codeOptions, function(){	
		});		
	};
	
	scwin.onpageunload = function() {
		
	};
	
	/*
    *  조회
    */
	scwin.search = function() {		
		com.execute(sbm_selectData, {
			successCallback : function(e){
				dlt_grd.setJSON(e.responseJSON.sptTecSlipMntVoList);
				tbx_result.setValue(dlt_grd.getRowCount());
				
				if(dlt_grd.getRowCount() > 0){
					btn_bill.setDisabled(false);
					for(var i=0; i<dlt_grd.getRowCount(); i++){
						
						if(dlt_grd.getCellData(i, "unslip_no") == ""){
							grd_list.setCellDisabled(i, "view_evid", true);
						}else{
							grd_list.setCellDisabled(i, "view_evid", false);
						}
					}
				}
				
			}
		});
	};
	
	/*
    *  결의생성전 체크
    */
	scwin.preSlip = function(){
		if(ica_slip_ymd.getValue() == ""){
			alert("결의일자를 입력하십시오");
			return false;
		}
		
		if(ica_slip_ymd.getValue() < "20230101") {
			alert("2022년 기술지원 결의는 연마감과 회계처리 프로세스 변경으로 인해 불가능합니다.");
			return false;
		}
		
		var rows = grd_list.getCheckedIndex("chk");
		if(rows.length == 0){
			alert("결의생성할 행을 선택하세요.");
			return false;	
		}
		
		
		
		var taxCnt = 0;
		for(var i=0; i<rows.length; i++){
			if(sbx_src_kind.getValue()!="VCR"){
				if(ica_slip_ymd.getValue() != dlt_grd.getCellData(rows[i], "issu_ymd")){
					alert("【결의일자】는 (세금)계산서 발행일자로 작성하시기 바랍니다.");
					return false;
				}
			}				
			
			if(dlt_grd.getCellData(rows[0], "demnd_recv_clsf") != dlt_grd.getCellData(rows[i], "demnd_recv_clsf")){
				alert("청구계산서와 영수계산서를 혼용하여 결의생성을 할 수 없습니다.");	
				return false;
			}
			
			if(dlt_grd.getCellData(rows[i], "demnd_recv_clsf") == "2" && dlt_grd.getCellData(rows[i], "req_no").trim() == ""){
				alert("영수계산서 발행시 반드시 입금의뢰를 해야합니다.");	
				return false;
			}
			
			if(dlt_grd.getCellData(rows[i], "unslip_no").trim() != ""){
				alert("[" + (row+1) + "]행은 이미 결의가 생성되어있습니다.");
				return false;
			}
			
			//RAK031:실행예산변경중, RAK041:집행가능, RAK061:미입금집행승인
			if(!/RAK031|RAK041|RAK061/.test(dlt_grd.getCellData(rows[i], "accnt_state"))){
				alert("계정상태가 [실행예산변경중,집행가능,미입금집행승인]인 경우만 결의생성이 가능합니다.\n계정상태를 확인바랍니다.");
				return false;
			}
			
			if((dlt_grd.getCellData(rows[i], "err_cd") != "000000" || dlt_grd.getCellData(rows[i], "stat_code") != "00") && dlt_grd.getCellData(rows[i], "decsn_no") == ""){
				alert("전자계산서 상태를 확인해 주시기 바랍니다.(국세청 전송완료, 역전자완료만 가능합니다.)");
				return false;
			}
			
			if(dlt_grd.getCellData(rows[i], "tax_cd") == "FTX001"){
				taxCnt++;
			}
		}

		if(taxCnt != rows.length){
			alert("과세와 비과세 계정을 혼용하여 결의생성할 수 없습니다.");
			return false;	
		}
		
		return true;
	};

	// ------------------------------------ event 함수 ---------------------------------------------//
	/*
     *  조회버튼 클릭 이벤트
     */
	scwin.btn_search_onclick = function(e) {
		if(dma_search.get("from_ymd") == "" && dma_search.get("to_ymd") == ""){
			alert("발행일자를 입력하세요.");
			return;
		}
		scwin.search();
	};
	
	/*
     *  계정번호 변경 이벤트
     */
	scwin.ibx_accnt_no_onchange = function(info) {
		if (this.getValue() == "") {
			ibx_accnt_rspns.setValue("");
		}
	};
	
	/*
     *  계정번호 검색 버튼 클릭 이벤트
     */
	scwin.btn_accnt_no_onclick = function(e) {
		var data={
			accnt_no : ibx_accnt_no.getValue(),
			ref_yn : (ibx_accnt_no.getValue() == "")? "Y" : "N"
		};
		
		com.pop.open(com.pop.TYPE.ACNNO, data, function(ret){
			ibx_accnt_no.setValue(ret.accnt_no);
			ibx_accnt_rspns.setValue(ret.accnt_rspns_nm);
		});
	};

	/*
     * 엑셀다운로드 버튼 클릭 이벤트
     */
	scwin.btn_excel_onclick = function(e) {
		if(dlt_grd.getRowCount() == 0) return;
		
		var option = {
			    fileName : "기술지원결의생성목록.xlsx"
			  , useDataFormat : true
//			  , hiddenVisible : true
		};
		com.downloadGridExcel(grd_list, option);
	};
	
	/*
     * 그리드 클릭 이벤트
     */
	scwin.grd_list_oncellclick = function(row,col,colId) {
		if(colId == "print_bill"){ // 계산서인쇄
			var paramOzrCode = "";
			if(dlt_grd.getCellData(row, "decsn_no") == ""){
				paramOzrCode = (dlt_grd.getCellData(row, "tax_cd") == "FTX001")? "S023" : "S024";
			}else{
				if(dlt_grd.getCellData(row, "decsn_no").length != 24){
					alert("역전자발행 승인번호가 올바르지 않습니다. 운영팀으로 문의하세요(천안내선 : 595)");
					return;
				}
				
				paramOzrCode = "S025";
			}
			
			var node = "tax_bill_no=" + dlt_grd.getCellData(row, "bill_no");
			com.oz.openPopup({
				ozrCode : paramOzrCode,
				param : node
			});
			
		}else if(colId == "unslip_no"){
			if(dlt_grd.getCellData(row, "unslip_no").trim() != ""){
				com.openTabMenu("F203", {unslip_no: dlt_grd.getCellData(row, "unslip_no")});	
			}else{
				alert("결의가 생성되지 않았습니다.");	
			}
			
		}else if(colId == "view_evid"){ // 미리보기
			if(dlt_grd.getCellData(row, "unslip_no").trim() != ""){
				com.biz.openEvidWindow(dlt_grd.getCellData(row, "unslip_no"));
			}
		}else if(colId == "img_depst"){ // 입금의뢰	
			if(dlt_grd.getCellData(row, "demnd_recv_clsf") == "1"){
				alert("영수계산서일 경우에만 입금의뢰할 수 있습니다. \n 청구계산서는 미수수탁정산결의화면에서 입금의뢰를 하시기 바랍니다.");
				return;	
			}
			
			var data = {
				bankaccnt_no : dlt_grd.getCellData(row, "bankaccnt_no"),
				tax_bill_no : dlt_grd.getCellData(row, "bill_no"),
				depst_mngmt_no : dlt_grd.getCellData(row, "depst_mngmt_no"),	
				depst_clsf : "FBD021", // 기술지원비
				biz_clsf : "S",
				ref_yn : "Y"
			}; 
			
			com.pop.open(com.pop.TYPE.DEPST_REQ, data, function(ret){
				debugger;
				if(ret){
					scwin.search();	
				}
			});
		}
	};
	
	/*
     * 계산서 버튼 클릭 이벤트
     */
	scwin.btn_bill_onclick = function(e) {
		var rows = grd_list.getCheckedIndex("chk");
		if(rows.length == 0){
			alert("계산서를 인쇄할 행을 선택하세요.");
			return;	
		}
		
		var reportArr = [];
		
		rows.forEach( function(row, index) {            
            if(dlt_grd.getCellData(row, "decsn_no") == ""){
	            var ozrNm = (dlt_grd.getCellData(row, "tax_cd") == "FTX001")? "FinTaxBillDetls.ozr" : "FinBillDetls.ozr";		
	            reportArr.push({
					ozrPath : "/sup/tec/tax/" + ozrNm,
					odiNm : "FinBillDetls",
					displayNm : "계산서" + dlt_grd.getCellData(row, "bill_no"),
					param: "tax_bill_no=" + dlt_grd.getCellData(row, "tax_bill_no")
				});		
			}else{
				if(dlt_grd.getCellData(row, "decsn_no").length != 24){
					alert("역전자발행 승인번호가 올바르지 않습니다. 운영팀으로 문의하세요(천안내선 : 595)");
					return;
				}
				
				reportArr.push({
					ozrPath : "/sup/tec/tax/FinTaxBillDecsnNo.ozr",
					odiNm : "FinBillDetlsDecsnNo",
					displayNm : "계산서" + dlt_grd.getCellData(row, "bill_no"),
					param: "tax_bill_no=" + dlt_grd.getCellData(row, "tax_bill_no")
				});		
			}
            
        });
        
        // 오즈 뷰어 팝업 호출
        com.oz.openPopup(reportArr, true);
	};
	
	/*
     * 결의생성 버튼 클릭 이벤트
     */
	scwin.btn_slip_onclick = function(e) {
		if(!scwin.preSlip()) return;

		if(dlt_grd.getCellData(grd_list.getCheckedIndex("chk")[0], "demnd_recv_clsf") == "2"){ // 영수결의
			dma_slipH.set("slip_typ_cd", "215");
			dma_search.set("demnd_recv_clsf", "2");
		}else{ // 청구결의
			dma_slipH.set("slip_typ_cd", "426");
			dma_search.set("demnd_recv_clsf", "1");
		}
		
		com.confirm("message.xom.wq.017"/*저장 하시겠습니까?*/, function(ret){
			if(ret){
				com.execute(sbm_saveSuptSlip, {
					successCallback : function(e){
						com.alert("message.xom.wq.023"/*정상적으로 처리되었습니다.*/, function() {
							dma_search.set("unslip_no", e.responseJSON.elData.unslip_no);
							rdo_slip_yn.setValue("Y");
							
