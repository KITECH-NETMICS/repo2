        <script type="text/javascript" lazy="false"><![CDATA[
	/****************************************************
	 * 화면 설명 : 사용(직인/인감)인수증(팝업)
	 * 변경 이력 : 2023-08-18	lsh	최초 작성
	 * serviceId : C202
	 ****************************************************/	
	
	// 전역변수로 사용하기 위해 scwin 객체안에 선언  
	scwin.data={};
        
	scwin.onpageload = function() {
		var param = com.getParameter();

		var reqNo = param.reqNo;			   // 신청번호
		
		// 영역내의 컴포넌트에 엔터키 이벤트 발생시 조회 수행
		com.setEnterKeyEvent(grp_hum_pop, scwin.openHumUserPop);
			
		if(reqNo){
			dma_search.set("req_no", reqNo);
			
			scwin.search();
		}
	};
	
	scwin.onpageunload = function() {
		
	};
	
	scwin.search = function() {
		com.execute(sbm_searchListPop, {
			successCallback : function(e) {
				grd_sealUse.setFocusedCell(0, 0);

				// 확인일자 셋팅
				if(dlt_list.getCellData(0, "surty_affir_ymd").trim() == ""){
					calSurtyAffirYmd.setValue(com.getServerDateTime("yyyyMMdd"));
				}
			}
		});
	};
	
	scwin.save = function(isMsg) {
		com.execute(sbm_updateSealUsePop, {
			successCallback : function(e) { // 성공 콜백
				com.alert("제출되었습니다.", function(){
					com.closePopup(dma_updateMap.getJSON()); // 닫을때 파라미터 전달하면 부모화면의 콜백함수 실행 (없으면 실행안됨)
				})
			}
		});
	}
	
	// 필수값체크 
	scwin.validateCheck = function() {
		if(!com.validateData(dma_updateMap, [  
			 { id : "surty_affir_ymd", mandatory : true }
			,{ id : "mngmt_respn_psn_nm", mandatory : true }
		], false)) return false;
		
		return true;
	}
	
	/**
	 * 제출 버튼 클릭 이벤트
	 */
	scwin.btn_save_onclick = function(e) {
		var jsonData = dlt_list.getRowJSON(0);
		dma_updateMap.setJSON(jsonData);
		dma_updateMap.set("surty_syspayno", com.getLoginInfo("sn"));
		
		if(!scwin.validateCheck()) return;
		
		com.confirm("message.xom.wq.017"/*저장 하시겠습니까?*/, function(ret) {
			if (ret) {
				scwin.save();
			}
		});
	};
	
	/**
	 * 사용자 검색 버튼 클릭 이벤트
	 */	
	scwin.btn_hum_search_onclick = function(e) {
		scwin.openHumUserPop();
	};
	
	/**
	 * 사용자검색 팝업 실행
	 */
	scwin.openHumUserPop = function(){
		var vEmpno = inputMngmtRespnPsnNm.getValue(); 
		var data = { empno : vEmpno, work_clsf : "HAG010" };
		
		com.pop.open(com.pop.TYPE.HUM, data, function(ret){
			inputMngmtRespnPsnNm.setValue(ret.nm);
			output1Tel.setValue(ret.ext_no);
			outputMngmtRespnPsnDept.setValue(ret.dept_nm);
			outputDeptCap.setValue(ret.depthed_nm);
		});
	}
	
	/**
	 * 닫기 버튼 클릭 이벤트
	 */
	scwin.btn_close_onclick = function(e) {
		com.closePopup();
	};
	]]></script>
