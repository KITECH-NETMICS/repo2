	/**
	 * [추천서 이메일 발급] 버튼 클릭 이벤트
	 */
	scwin.btn_rcmd_mail_onclick = function(e) {
		
		//이메일 발급 전 필수체크 실행
		if (!scwin.preMail()) {
			return false;
		}
		
		//체크한 행 갯수
		var rowIdx = grd_list.getCheckedIndex("chk");
		//체크된 데이터 추출
		var chkList 	 = dlt_list.getMatchedJSON("chk", "Y");
		
		var loginInfo 	 = com.getLoginInfo();
		var templateVars = [];
		var toAddr		 = [];
		var reqNoList	 = [];
		
		chkList.forEach(function(obj, index) {
			reqNoList.push(obj.req_no);
			
			var thisEmail = "";
			
			//"퇴직"인 경우와 그 외의 경우. 보내는 메일 주소 다름 
			if (obj.workClsf == "퇴직") {
				thisEmail = obj.staff_email;
			} else {
				thisEmail = obj.req_syspayno_email;
			}
			
			if (!(toAddr.includes(thisEmail))) {
				toAddr.push(thisEmail);
				templateVars.push({
					"toAddr"   : thisEmail,
					contentVar: {
						"@reqYmd@"			: obj.req_ymd.substr(0, 4),			//신청일	
						"@formerLatter@"	: obj.former_latter.substr(0, 4),	//전기 및 후기	
						"@stuNm@"			: obj.stu_nm,						//활용학연자(학생명)	
						"@reqNo@"			: obj.req_no,						//신청번호	
						"@seq@"				: obj.seq							//순서
					}
				});	
			}
				
		});
		
		com.confirm("추천서 이메일 발급하시겠습니까?", function(ret){		
			if (ret) {
				
				com.mail.sendMessage({
					subject: '[학생연구원활용예정확인 신청] 신청서 결재완료 및 추천서 발급.',
					content: '내용',
					fromAddr: `${loginInfo.cn} <${loginInfo.email}>`,
					"toAddr": toAddr.join(", "),	// 개별 발송의 경우 무시됨
					savesent: false,	// 보낸편지함 저장 여부 (default: true)
					onesend: false,	// 일괄발송 | 개별발송 (default: true)
					logging: true,	// 로그 저장 여부 (default: true)
					business: 'HUM',
					templatePath: 'hum/RcmsMail',
					templateVars: templateVars,
				}, function() { 
					com.alert("메일을 발송하였습니다.");
					
					//체크한 데이터 전달해주기 위한 세팅
					dlt_list_rcmd.setJSON(grd_list.getCheckedJSON("chk"));
					//update해주기 위해 오늘날짜 추가 세팅
					for (var i = 0; i < dlt_list_rcmd.getTotalRow(); i++) {
						dlt_list_rcmd.setCellData(i, "updateData", com.getServerDateTime())
					}
					//메일 발송 여부 update
					com.execute(sbm_updateMailYn, {
						successCallback : function(e) {
							dlt_list_rcmd.removeAll();
							//새로고침
							scwin.search();
						}
					});	
		
				});
				
			}
		
		});

	};
	
	/**
	 * [추천서 이메일 발급] 전 필수체크 실행
	 */	
	scwin.preMail = function(e) {
		
		//체크한 행 갯수
		var rowIdx = grd_list.getCheckedIndex("chk");
		
		if(rowIdx.length == 0){
			com.alert(com.getMsg("message.xom.co.com.0003", "이메일 발송할 행"));
			return false;
		}
		
		// 발송전 체크
		for (var i = 0; i < rowIdx.length; i++) {
			
			var workClsf = dlt_list.getCellData(rowIdx[i], "work_clsf");
			var rcmd_no = dlt_list.getCellData(rowIdx[i], "rcmd_no");
			
			if (dlt_list.getCellData(rowIdx[i], "work_clsf") == "퇴직" && dlt_list.getCellData(rowIdx[i], "staff_email") == "") {
				com.alert("기존 신청자는 퇴직자 입니다. 담당자를 입력해주세요.");

				return false;
				
			} else if (dlt_list.getCellData(rowIdx[i], "rcmd_no") == "") {
				com.alert("추천서가 존재하지 않는 행이 선택되었거나 포함되어 있습니다.");

				return false;
			}
			
		}
		
		return true;
	};

