    /****************************************************
 	 * 화면 설명 : 기념홍보물신청(목록)
 	 * 변경 이력 : 2023-09-13 	김상미	최초 작성
 	 * 서비스아이디 : L532
 	 ****************************************************/  
 	
 	scwin.data = {};
 	
 	/**
	 * 페이지 로딩 이벤트
	 */  	            
	scwin.onpageload = function() {
		scwin.data.service_id="L532";
		
		//콤보박스세팅
		var codeOptions = [ { code : "XAD", compID : "sbx_apr_state"}];		
		com.setCmnCd(codeOptions, function() {
			scwin.searchMaster();
		});		
		
		com.setValidGroup(grp_search, [
			 { id : "ica_req_ymd_from", mandatory : true}
			,{ id : "ica_req_ymd_to", mandatory : true } 				
		]);
		
		// 기간역전 체크
		com.checkPeriod(ica_req_ymd_from, ica_req_ymd_to);
				
		var param = com.getParameter();		
		if (param != undefined && param != null) {
			dma_search.setJSON(param);
		}
						
		//관리자 권한 확인 및 요청자 파라메터 세팅
		com.biz.checkRole({ serviceId : scwin.data.service_id, roleCodes : com.getLoginInfo('roleCode')}, function(e) {	
			scwin.data.isRoleYn = e.isRoleYn;
		});
		
		if (dma_search.get("flag") == "search") {
			scwin.search();
		} else {
			//달력세팅
			scwin.data.today = com.getServerDateTime();
			ica_req_ymd_from.setValue(scwin.data.today.substring(0,6)+"01");
			ica_req_ymd_to.setValue(scwin.data.today);		
		}
		
	};
	
	scwin.onpageunload = function() {
		
	};
 	
 	/**
	 * 물품정보 selectbox 데이터조회
	 */ 	
	scwin.searchMaster = function() {
		com.execute(sbm_selectLplLprGoodsMasterList, {
			successCallback : function(e) {
				dlt_goods_list.setJSON(e.responseJSON.lplLprPrGoodsReqInfoVoList);
			}
		});	
	};

	/**
	 * 조회버튼 클릭 이벤트
	 */			
	scwin.btn_search_onclick = function(e) {
		//조회
		scwin.search();
	};
	 	
 	/**
	 * 조회 실행
	 */ 	
	scwin.search = function() {
		if (!scwin.data.isRoleYn) {
			dma_search.set("req_psn_syspayno", com.getLoginInfo("sn"));
		}	
		if (scwin.preSearch()) {		
			com.execute(sbm_selectLplLprPrGoodsReqList, {
				successCallback : function(e) {
					dlt_req_list.removeAll();
					dlt_list.setJSON(e.responseJSON.lplLprPrGoodsReqInfoVoList, false);
					var rows = 0;
					for (var j = 0; j < dlt_list.getRowCount(); j++) {
						var req_no = dlt_list.getCellData(j, "req_no");
						if (j == 0) {
							dlt_req_list.insertRow();
							dlt_req_list.setRowJSON(rows, dlt_list.getRowJSON(j), true);
							rows++;
						} else {
							var idx = dlt_req_list.getMatchedIndex("req_no", req_no, true);
							if (idx != undefined && idx.length > 0) {
								var matchObj = dlt_req_list.getRowJSON(idx[0]);
								var obj = dlt_list.getRowJSON(j);								
								if (matchObj != undefined && matchObj != null) {
									dlt_req_list.setCellData(idx[0], "prgds_nm", matchObj["prgds_nm"] +", "+obj["prgds_nm"]) ;
								}								
							} else {
								dlt_req_list.insertRow();
								dlt_req_list.setRowJSON(rows, dlt_list.getRowJSON(j), true);
								rows++;								
							}
						}
					}
					tbx_result.setValue(dlt_req_list.getTotalRow());
				}
			});	
		}	
	};

	/**
	 * 조회전 확인
	 */	
	scwin.preSearch = function() {
		if (!com.validateData(dma_search,[
			{ id : "req_fr_ymd", mandatory : true},
			{ id : "req_to_ymd", mandatory : true},
		], false)) {
			return false;
		}
		return true;
	};
	
	/**
	 * 신규 버튼 클릭
	 */		
	scwin.btn_new_onclick = function(e) {
		scwin.openDetail("C", -1);	
	};
	
	/**
	 * 엑셀다운로드 버튼 클릭
	 */		
	scwin.btn_down_excel_onclick = function(e) {
		var option = {
			    fileName : "기념홍보물신청조회.xls"
			  , removeColumns : "6,9,10,11"			    
			  , useDataFormat : true
		};
		if (dlt_req_list.getRowCount()>0) {
			com.downloadGridExcel(grd_list, option);		
		} else {
			com.alert("조회된 데이터가 없습니다.");
			return;
		}
	};
	
	/**
	 * 그리드 row 클릭 이벤트
	 */		
	scwin.grd_list_oncellclick = function(row,col,colId) {
		if (colId == "req_no") {
			scwin.openDetail("U", row);
		} else if (colId == "btn_popup") {
			var data = {};
			data.req_no = dlt_req_list.getCellData(row, "req_no");
			data.prgds_nm = dlt_req_list.getCellData(row, "prgds_nm");
			data.req_psn_nm = dlt_req_list.getCellData(row, "req_psn_nm");
			data.req_ymd = dlt_req_list.getCellData(row, "req_ymd");
			data.req_psn_dept_nm = dlt_req_list.getCellData(row, "req_psn_dept_nm");
			data.sn = com.getLoginInfo("sn");
			data.flag = "reqSel";
			biz.lpl.pop.open(biz.lpl.pop.TYPE.DELIV, data, function() {});
		}			
	};
	
	/**
	 * 화면이동
	 */
	scwin.openDetail = function(type, row) {
		var data={};
		
		if (type == "U") {
			data.req_fr_ymd = ica_req_ymd_from.getValue();
			data.req_to_ymd = ica_req_ymd_to.getValue();
			data.prgds_nm = sbx_prgds_nm.getValue();
			data.apr_state = sbx_apr_state.getValue();
			data.req_no = dlt_req_list.getCellData(row, "req_no");
			data.flag ="update";
		} else {
			data.cmd ="In";
		}
	
		com.openTabMenu('L531', data, function(retObj) {
			// 콜백
			if (retObj) {
				scwin.search();	
			}
		});	
	};		
	]]></script>
